# スタートメッセージ表示しない
startup_message off
# prefixキーをC-tに変更
escape ^Tt
# 回線が切れた場合に自動的にdetach
autodetach on
# status表示する
hardstatus alwayslastline "[%02c] %-w%{=b bw}%n %t%{-}%+w"
#caption always

shell -$SHELL

# putty経由での接続時に256色表示するための設定
## http://frexx.de/xterm-256-notes/
# erase background with current bg color
defbce "on"
# do not use 'screen-bce'
term xterm-256color
